** Problem :- **



** Code :- **

class Solution {
  public:
    int maxSubarraySum(vector<int> &arr) {
        int currSum = 0;
        int maxSum = INT_MIN; 
        for (int n : arr) {
            currSum = currSum + n;
            maxSum = max(maxSum, currSum);
            if (currSum < 0) {
                currSum = 0;
            }
        }
        return maxSum;
    }
};

