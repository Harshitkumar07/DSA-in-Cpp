** Problem :- **



** Code :- **

class Solution {
  public:
    long long distance(vector<int>& arr) {
        vector<int> index(arr.size() + 1);
        for (int i = 0; i < arr.size(); ++i) {
            index[arr[i]] = i;
        }
        long long totalDist = 0;
        for (int i = 1; i < arr.size(); ++i) {
            totalDist += abs(index[i] - index[i + 1]);
        }
        return totalDist;
    }
};

