** Leetcode Problem 724:- **



** Code :- **

class Solution {
public:
    int pivotIndex(vector<int>& arr) {
        int sum = 0, n = arr.size();
        for (int i = 0; i < n; i++) {
            sum += arr[i];
        }
        int lsum = 0;
        for (int i = 0; i < n; i++) {
            int rsum = sum - lsum - arr[i];
            if (lsum == rsum) {
                return i;
            }
            lsum += arr[i];
        }
        return -1;
    }
};

