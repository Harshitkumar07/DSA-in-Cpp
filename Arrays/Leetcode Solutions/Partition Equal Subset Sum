** Leetcode Problem 416 :- **



** Code :- **

class Solution {
public:
    bool canPartition(vector<int>& nums) {
         int totalSum = 0;
        for (int num : nums) {
            totalSum += num;
        }
        if (totalSum % 2 != 0) {
            return false;
        }
        int target = totalSum / 2;
        unordered_set<int> allSums;
        allSums.insert(0);
        for (int num : nums) {
            unordered_set<int> newSums;
            for (int sum : allSums) {
                int newSum = sum + num;
                if (newSum == target) {
                    return true;
                }
                if (newSum < target) {
                    newSums.insert(newSum);
                }
            }
            allSums.insert(newSums.begin(), newSums.end());
        }
        return false;
    }
};

