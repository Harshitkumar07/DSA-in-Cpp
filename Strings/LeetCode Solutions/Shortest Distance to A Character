** Leetcode Problem :- **



** Code :- **

class Solution {
public:
    vector<int> shortestToChar(string s, char c) {
        vector<int> vec;
        for (int i = 0; i < s.size(); i++) {
            if (s[i] == c)
                vec.push_back(i);
        }
        vector<int> ans(s.size(), INT_MAX);
        for (int i = 0; i < s.size(); i++) {
            for (int j = 0; j < vec.size(); j++)
                ans[i] = min(ans[i], abs(vec[j] - i));
        }
        return ans;
    }
};

